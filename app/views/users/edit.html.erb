<div class="container">
  <% if @user.errors.any? %>
  <div class="error-messages">
    <h3>
      <%= @user.errors.count %> errors prohibited obj from being saved:
    </h3>
    <% @user.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
  </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User Info</h1>
      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f|%>
      <div class="form-group">
        <label for="d-block">Name</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="d-block">Image</label>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <label class="block">Introduction</label>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Profile", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
    <%= link_to "Show", user_path(@user.id) %> | <%= link_to "Back", books_path %>

  </div>
</div>