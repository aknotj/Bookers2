<div class="container">
  <% if @book.errors.any? %>
  <div class="error-messages">
    <h3>
      <%= @book.errors.count %> errors prohibited obj from being saved:
    </h3>
    <% @book.errors.full_messages.each do |message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>
  </div>
  <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f|%>
      <div class="form-group">
        <label for="book_title d-block">Title</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <label for="book_opinion d-block">Opinion</label>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
    <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>

  </div>
</div>